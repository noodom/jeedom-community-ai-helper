{
  "manifest_version": 3,
  "name": "Jeedom Community AI Helper",
  "version": "1.0",
  "description": "Génère des réponses avec l'IA sur le forum de la communauté Jeedom, fait un résumé de posts.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://community.jeedom.com/t/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "options_page": "options.html",
  "action": {
    "default_title": "Jeedom Community AI Helper",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}